@model List<WebApp_Tarde.Entidades.ProdutoEntidade>
<div class="card">
    <div class="card-header">
        <h2>Lista de Produtos</h2>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-2">
                <a href="/Clientes/Cadastro" class="btn btn-success">Novo Produto</a>
            </div>

            <div class="col-3">
                <select name="filtro" class="form-control">
                    <option value="0">Todos os campos</option>
                    <option value="id">Por Id</option>
                    <option value="nome">Por Nome</option>
                    <option value="quantidade">Por Telefone</option>
                    <option value="valor">Por Valor</option>
                </select>
            </div>

            <div class="col-5">
                <input type="text" name="busca" class="form-control" />
            </div>

            <div class="col-2">
                <button class="btn btn-primary" type="submit"> Pesquisar </button>
            </div>
        </div>
        <table class="table table-striped">

            <thead>
                <tr>
                    <th>Código</th>
                    <th>Produto</th>
                    <th>Quantidade</th>
                    <th>Valor</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>

                @foreach (var produto in Model)
                {
                    <p>@produto.Descricao - R$ @produto.Valor</p>
                }
                <tr>
                    <td>1</td>
                    <td>Boné</td>
                    <td>16</td>
                    <td>24.99</td>
                    <td>
                        <a href="/clientes/editar/1" class="btn btn-warning"> Editar </a>
                        <a href="/clientes/excluir/1" class="btn btn-danger"> Excluir </a>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Camisa</td>
                    <td>28</td>
                    <td>17.99</td>
                    <td>
                        <a href="/clientes/editar/2" class="btn btn-warning"> Editar </a>
                        <a href="/clientes/excluir/2" class="btn btn-danger"> Excluir </a>
                    </td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>Shorts</td>
                    <td>42</td>
                    <td>19.99</td>
                    <td>
                        <a href="/clientes/editar/3" class="btn btn-warning"> Editar </a>
                        <a href="/clientes/excluir/3" class="btn btn-danger"> Excluir </a>
                    </td>
                </tr>
                <tr>
                    <td>4</td>
                    <td>Meia</td>
                    <td>72</td>
                    <td>9.99</td>
                    <td>
                        <a href="/clientes/editar/4" class="btn btn-warning"> Editar </a>
                        <a href="/clientes/excluir/4" class="btn btn-danger"> Excluir </a>
                    </td>
                </tr>
                <tr>
                    <td>5</td>
                    <td>Cueca</td>
                    <td>17</td>
                    <td>5.99</td>
                    <td>
                        <a href="/clientes/editar/5" class="btn btn-warning"> Editar </a>
                        <a href="/clientes/excluir/5" class="btn btn-danger"> Excluir </a>
                    </td>
                </tr>
            </tbody>

        </table>
    </div>
</div>

